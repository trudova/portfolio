
    <% layout('layouts/boilerplate') %> 
    <%- include('../partials/flash.ejs') %> 
   <section class="section blog">
      <!-- section title -->
      <div class="section-title">
        <h2>Blog</h2>
        <div class="underline"></div>
      </div>
      <!--end of section title -->
               <div class="section-center blog-center">
                   <% for( let post of blog){ %>
                 <!-- single article -->
        <div class="card1">
          <!-- front of the card -->
          <div class="card-side card-front">
            <img src="<%=post.image%> " alt="" />
            <div class="card-info">
              <h4><%= post.articleTitle %> </h4>
              <p>
             <%= post.article.substring(0,100) %> ...
              </p>
              <div class="card-footer">
                <img src="./images/hero-img-small.jpeg" alt="author image" />
                <p>3 min read</p>
              </div>
            </div>
          </div>
          <!-- card back  -->
          <div class="card-side card-back">
            <a href="/blog/<%=post._id%>" class="btn">read more</a>
          </div>
        </div>
        <!-- end of single article -->
        <% } %> 
      </div>
  </section>








